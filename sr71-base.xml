<?xml version="1.0"?>

<PropertyList>

 <sim>
 
  <author>BARANGER Emmanuel</author>
  <status>alpha</status>
  
  <fuel-fraction>1.0</fuel-fraction>
  
  <sound>
    <audible>true</audible>
    <path>Aircraft/Lockheed-SR71/Sounds/sr71-sound.xml</path>
  </sound>

  <model>
   <path>Aircraft/Lockheed-SR71/Models/sr71.xml</path>
  </model>

  <startup>
   <splash-texture>Aircraft/Lockheed-SR71/sr71-splash.rgb</splash-texture>
  </startup>

  <virtual-cockpit archive="y">true</virtual-cockpit>

  <chase-distance-m type="double" archive="y">-40.0</chase-distance-m>
  
  <view n="0">
    <name>Cockpit View</name>
    <internal archive="y">true</internal>
    <config>
      <x-offset-m archive="y">  0.000 </x-offset-m>	<!-- Right -->
      <y-offset-m archive="y"> -0.103 </y-offset-m>	<!-- Up    -->
      <z-offset-m archive="y">-10.142 </z-offset-m>	<!-- Back  -->
      <default-field-of-view-deg>70</default-field-of-view-deg>
    </config>
  </view>

  <view n="100">
    <name>Noze Wheel Camera View</name>
    <type>lookfrom</type>
    <internal archive="y">true</internal>
    <config>
      <pitch-offset-deg>0</pitch-offset-deg> 
      <x-offset-m archive="y">  0.000 </x-offset-m>	<!-- right/left --> 
      <y-offset-m archive="y"> -2.027 </y-offset-m>	<!-- up/down -->
      <z-offset-m archive="y"> -2.581 </z-offset-m>	<!-- aft/fore -->
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
      <default-field-of-view-deg type="double">55.0</default-field-of-view-deg>
      <default-pitch-deg type="double">0</default-pitch-deg>
      <default-heading-deg type="double">0</default-heading-deg>
      <front-direction-deg type="double">0</front-direction-deg>
      <front-left-direction-deg type="double">45</front-left-direction-deg>
      <left-direction-deg type="double">90</left-direction-deg>
      <back-left-direction-deg type="double">135</back-left-direction-deg>
      <back-direction-deg type="double">180</back-direction-deg>
      <back-right-direction-deg type="double">225</back-right-direction-deg>
      <right-direction-deg type="double">270</right-direction-deg>
      <front-right-direction-deg type="double">315</front-right-direction-deg>
    </config>
  </view>

  <help>
    <title>SR 71 Blackbird</title>
    <key>
      <name>d</name>
      <desc>Open/Close canopy</desc>
    </key>
    <key>
      <name>D</name>
      <desc>Open/Close parachut</desc>
    </key>
  </help>
    
 </sim>

 <engines>
   <engine n="0">
     <engine-num type="int">0</engine-num>
     <running>true</running>
   </engine>
   <engine n="1">
     <engine-num type="int">1</engine-num>
     <running>true</running>
   </engine>
 </engines>

 <consumables>
   <fuel>
     <tank n="0">
       <tank-num type="int">0</tank-num>
       <level-gal_us archive="y">2070</level-gal_us>
     </tank>
   </fuel>
 </consumables>

 <input>
   <keyboard include="Nasal/sr71-keyboard.xml"/>
 </input>
 
 <controls>
   <lighting>
     <strobe>1</strobe>
   </lighting>
 </controls>

 <nasal>
   <sr71>
     <file>Aircraft/Lockheed-SR71/Nasal/light.nas</file>
     <file>Aircraft/Lockheed-SR71/Nasal/doors.nas</file>
   </sr71>
 </nasal>

</PropertyList>

