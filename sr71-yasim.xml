<?xml version="1.0" encoding="UTF-8"?>

<!-- Lockheed SR 71 Blackbird yasim config. 2010 BARANGER Emmanuel

     sources         : http://en.wikipedia.org/wiki/SR-71_Blackbird

     Wingspan        : 16.94 m    (   55 ft 7 in )
     Lenght          : 32.74 m    (  107 ft 5 in )
     Height          :  5.64 m    (   18 ft 6 in )
     Empty mass      : 30600 kg   (67500 lb )
     Max speed       :   513 km/h (  277 kt )
     Engines         : 2 Pratt & Whitney J58-1 continuous-bleed afterburning turbojets (32500 lbf)
-->
<airplane mass="67500">

  <approach speed="100" aoa="9" fuel="0.3">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.4"/>
    <control-setting axis="/controls/engines/engine[0]/afterburner" value="0.2"/>
    <control-setting axis="/controls/engines/engine[1]/throttle" value="0.4"/>
    <control-setting axis="/controls/engines/engine[1]/afterburner" value="0.2"/>
    <control-setting axis="/controls/gear/gear-down" value="1"/>
  </approach>

  <cruise speed="1500" alt="40000" fuel="0.8">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.8"/>
    <control-setting axis="/controls/engines/engine[0]/afterburner" value="0.8"/>
    <control-setting axis="/controls/engines/engine[1]/throttle" value="0.8"/>
    <control-setting axis="/controls/engines/engine[1]/afterburner" value="0.8"/>
    <control-setting axis="/controls/gear/gear-down" value="0"/>
  </cruise>

  <cockpit x="10.142" y="0.0" z="-0.103"/>

  <fuselage ax="15.046" ay="0.000" az="-1.077" bx="-16.933" by="0.000" bz="-0.286" width="1.8" taper="0.37" midpoint="0.2"/>

  <fuselage ax="-2.507" ay="4.205" az="-0.743" bx="-14.091" by="4.205" bz="-0.305" width="1.8" taper="0.8" midpoint="0.5"/>

  <fuselage ax="-2.507" ay="-4.205" az="-0.743" bx="-14.091" by="-4.205" bz="-0.305" width="1.8" taper="0.8" midpoint="0.5"/>

  <wing x="-6.594" y="0" z="-0.884"
        chord="18.336"
        length="10.8"
        taper="0.1"
        sweep="38"
        dihedral="2"
        camber="0.15">
        <stall aoa="16" width="1" peak="1.5"/>
        <flap1 start="0.66" end="1" lift="1.3" drag="1.2"/>

        <control-input axis="/controls/flight/aileron" control="FLAP1" split="true"/>
        <control-input axis="/controls/flight/aileron-trim" control="FLAP1" split="true"/>

        <control-output control="FLAP1" side="left" prop="/surface-positions/left-aileron-pos-norm"/>
        <control-output control="FLAP1" side="right" prop="/surface-positions/right-aileron-pos-norm"/>
  </wing>

  <hstab x="-6.594" y="0" z="-0.884"
         chord="18.336"
         length="10.8"
         taper="0.1"
         sweep="38"
         dihedral="2"
         camber="0.15">
         <stall aoa="14" width="2" peak="1.8"/>
         <flap0 start="0" end="1" lift="1.4" drag="1.5"/>

         <control-input axis="/controls/flight/elevator" control="FLAP0"/>
         <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>

         <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
  </hstab>

  <vstab x="-11.838" y="4.099" z="0.321"
         chord="5.327" 
         length="2.6" 
         taper="0.45"
         sweep="24"
         dihedral="105">
         <stall aoa="12" width="1" peak="1.5"/>
         <flap0 start="0" end="1" lift="1.4" drag="1.1"/>

         <control-input axis="/controls/flight/rudder" control="FLAP0" invert="true"/>
         <control-input axis="/controls/flight/rudder-trim" control="FLAP0" invert="true"/>

         <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm"/>
  </vstab>

  <vstab x="-11.838" y="-4.099" z="0.321"
         chord="5.327" 
         length="2.6" 
         taper="0.45"
         sweep="24"
         dihedral="75">
         <stall aoa="12" width="4" peak="1.5"/>
         <flap0 start="0" end="1" lift="1.4" drag="1.1"/>

         <control-input axis="/controls/flight/rudder" control="FLAP0" invert="true"/>
         <control-input axis="/controls/flight/rudder-trim" control="FLAP0" invert="true"/>

         <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm"/>
  </vstab>

  <!-- 2  Pratt & Whitney J-58 

       sources          : http://en.wikipedia.org/wiki/Pratt_%26_Whitney_J58

       type             : afterburning variable cycle turbojet/ramjet
       thrust           : 25000 lb 
       afterburner      : 34000 lb
       weight           : approx. 6000 lbs.
  -->
  <jet x="-6.191" y="4.118" z="-0.529"
       mass="6000"
       thrust="25000"
       afterburner="34000"
       tsfc="0.519"
       epr="2.8"
       spool-time="5">
       <actionpt x="-14" y="4.118" z="-0.305"/>
       <control-input axis="/controls/engines/engine[0]/throttle" control="THROTTLE"/>
       <control-input axis="/controls/engines/engine[0]/afterburner" control="REHEAT"/>
  </jet>

  <jet x="-6.191" y="-4.118" z="-0.529"
       mass="6000"
       thrust="25000"
       afterburner="34000"
       tsfc="0.519"
       epr="2.8"
       spool-time="5">
       <actionpt x="-14" y="-4.118" z="-0.305"/>
       <control-input axis="/controls/engines/engine[1]/throttle" control="THROTTLE"/>
       <control-input axis="/controls/engines/engine[1]/afterburner" control="REHEAT"/>
  </jet>

  <!-- nose -->
  <gear x="5.846" y="0" z="-3.029" 
        retract-time="7"
        compression="0.44"
        spring="1.1"
        damp="1.4">
        <control-input axis="/controls/flight/rudder" control="STEER" square="false"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
        <control-speed control="EXTEND" transition-time="7"/>
        <control-output control="EXTEND" prop="/gear/gear[0]/position-norm"/>
  </gear>

  <!-- left main -->
  <gear x="-6.491" y="2.444" z="-3.028" 
        retract-time="7" 
        compression="0.72" 
        spring="0.85" 
        damp="2">
        <control-input axis="/controls/gear/brake-left" control="BRAKE"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
        <control-speed control="EXTEND" transition-time="7"/>
        <control-output control="EXTEND" prop="gear/gear[1]/position-norm"/>
  </gear>

  <!-- right main -->
  <gear x="-6.491" y="-2.444" z="-3.028"
        retract-time="7"
        compression="0.72"
        spring="0.85"
        damp="2">
        <control-input axis="/controls/gear/brake-right" control="BRAKE"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
        <control-speed control="EXTEND" transition-time="7"/>
        <control-output control="EXTEND" prop="gear/gear[2]/position-norm"/>
  </gear>

  <!--    Total fuel = 14000 lbs   -->
  <tank x="4.0" y="0.0" z="-0.15" capacity="7000" jet="true"/>
  <tank x="-1.0" y="0.0" z="-0.15" capacity="7000" jet="true"/>
  
  <ballast x="7" y="0" z="-5" mass="4000"/>

</airplane>
